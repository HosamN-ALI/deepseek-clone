# مفاتيح API المطلوبة
DEEPSEEK_KEY=your_deepseek_api_key_here
SERPAPI_KEY=your_serpapi_key_here

# إعدادات الخادم
PORT=5000
NODE_ENV=development

# إعدادات CORS
CLIENT_URL=http://localhost:3000

# إعدادات الأمان
RATE_LIMIT=100                # عدد الطلبات المسموحة لكل IP في الساعة
MAX_REQUEST_SIZE=10mb         # الحد الأقصى لحجم الطلب
REQUEST_TIMEOUT=30000         # مهلة الطلب (30 ثانية)

# إعدادات التسجيل
LOG_LEVEL=info               # مستوى التسجيل (debug, info, warn, error)
LOG_FILE=server.log         # ملف السجل

# ملاحظات:
# 1. انسخ هذا الملف إلى .env وأضف القيم الحقيقية
# 2. لا تقم برفع ملف .env إلى Git
# 3. احصل على مفتاح DeepSeek من: https://deepseek.com/api
# 4. احصل على مفتاح SerpAPI من: https://serpapi.com
